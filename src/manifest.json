{
  "name": "Options Helper",
  "short_name": "OH",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Options Helper description",
  "icons": {
    "16": "images/favicon-16x16.png",
    "48": "images/favicon-32x32.png"
  },
  "background": {
    "service_worker": "scripts/background.webpack.js"
  },
  "permissions": [
    "management",
    "activeTab",
    "background",
    "browsingData",
    "clipboardWrite",
    "contentSettings",
    "declarativeContent",
    "downloads",
    "storage",
    "tabs",
    "webNavigation",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.ally.com/*",
        "*://*.dataroma.com/*",
        "*://docs.google.com/*",
        "*://*.etrade.com/*",
        "*://etrade.com/*",
        "*://finance.yahoo.com/*",
        "*://google.com/finance/*",
        "*://www.google.com/finance/*",
        "*://*.interactivebrokers.com/*",
        //"*://localhost:*/*",
        "*://valueinvestorsclub.com/*",
        "*://vanguard.com/*",
        "*://*.vanguard.com/*",
        "*://seekingalpha.com/*"
      ],
      "js": [
        "scripts/content.webpack.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/favicon-16x16.png",
      "32": "images/favicon-32x32.png"
    },
    "default_title": "Options Helper",
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [{
    "resources": [
      "scripts/*",
      "styles/*",
      "html/links.html",
      "images/*",
      "earnings-cal/*",
      "option-chains-latest/*"
    ],
    "matches": [
      "*://*.ally.com/*",
      "*://www.dataroma.com/*",
      "*://docs.google.com/*",
      "*://*.etrade.com/*",
      "*://google.com/*",
      "*://www.google.com/*",
      "*://*.vanguard.com/*",
      "*://etrade.com/*",
      "*://finance.yahoo.com/*",
      "*://*.interactivebrokers.com/*",
      //"*://localhost:*/*",
      "*://valueinvestorsclub.com/*",
      "*://vanguard.com/*"
    ]
  }],
  "externally_connectable": {
    "matches": [
      "*://*.ally.com/*",
      "*://*.dataroma.com/*",
      "*://docs.google.com/*",
      "*://*.etrade.com/*",
      "*://etrade.com/*",
      "*://www.google.com/*",
      //"*://localhost:*/*",
      "*://*.vanguard.com/*",
      "*://vanguard.com/*"
    ]
  },
  "host_permissions": [
    "*://docs.google.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "manifest-v3-request-rules.json"
    }]
  }
}